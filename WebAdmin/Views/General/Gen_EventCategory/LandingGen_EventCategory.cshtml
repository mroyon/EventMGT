
@using CLL
@model BDO.Core.DataAccessObjects.Models.gen_eventcategoryEntity
@inject CLL.Localization.LocalizeService SharedLocalizer

@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = "View Gen  Event Category List";
}


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-footer">
                <h5 class="card-title">@SharedLocalizer.GetLocalizedHtmlString("GEN_EVENTCATEGORYY_LIST")</h5>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <form method="POST" id="frmDTGen_EventCategorylist" class="my-login-validation" novalidate="" autocomplete="off">
                    <div class="row">
                        <div class="col-md-12">
                            <table id="DTGen_EventCategorylist" class="table table-striped table-bordered" @*style="width:100%"*@ cellspacing="0">
                                <thead>
                                    <tr>
										 <th><label class="labelNormal  " asp-for="eventcategoryid"></label></th>
										 <th><label class="labelNormal  " asp-for="eventcategory"></label></th>
										 <th><label class="labelNormal  " asp-for="description"></label></th>
										 <th><label class="labelNormal  " asp-for="ex_nvarchar3"></label></th>                                        <th>@SharedLocalizer.GetLocalizedHtmlString("ACTIONS_BUTTONS")</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                </form>
            </div>
            <!-- ./card-body -->
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">

                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>


@section Scripts {
    <script>
        $(function () {
             var dt = $("#DTGen_EventCategorylist").DataTable({
				 "ajax": $.fn.dataTable.json({ url: "/Gen_EventCategory/ListGen_EventCategory" }),
				 "buttons": { 
					 "buttons": [ 
						 { 
							 text: '<i class="fas fa-plus-square" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("ADD_NEW_RECORD")', 
							 className: 'btn btn-primary mr-1', 
							 action: function (e, dt, node, config) { 
								 location.href = "/Gen_EventCategory/AddGen_EventCategory"; 
							 } 
						 }, 
						 { 
							 extend: 'copy', 
							 text: '<i class="fas fa-copy" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("COPY_LIST")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'excel', 
							 text: '<i class="fas fa-file-excel" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("EXCEL_EXPORT")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'csv', 
							 text: '<i class="fas fa-file-csv" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("CSV_EXPORT")', 
							 className: 'btn btn-info mr-1', 
						 }, 
						 { 
							 extend: 'pdf', 
							 text: '<i class="fa fa-print" aria-hidden="true"></i> @SharedLocalizer.GetLocalizedHtmlString("PRINT")', 
							 className: 'btn btn-info mr-1', 
						 }] 
				 }, 
				 columnDefs: [ 
					 { targets: 0, "visible": false, searchable: false },
					 { targets: 1, "visible": true, "sortable": true },
					 { targets: 1, "visible": true, "sortable": true },
					 { targets: 1, "visible": true, "sortable": true },
					 { targets: 4, "visible": true, "sortable": false, "className": "text-center" }
				 ], 
				 "columns": [ 
					 { "data": "eventcategoryid", "name": "eventcategoryid", "autoWidth": true },
					 { "data": "eventcategory", "name": "eventcategory", "autoWidth": true },
					 { "data": "description", "name": "description", "autoWidth": true },
					 { "data": "ex_nvarchar3", "name": "ex_nvarchar3", "autoWidth": true },
					 { 
							 "data": "datatablebuttonscode", render: function (data, type, full, row) { 
									 return data;
							 } 
					 } 
				 ] 
			 }); 
        });

    </script>
}




