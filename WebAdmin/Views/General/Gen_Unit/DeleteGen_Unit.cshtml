@using CLL
@model BDO.Core.DataAccessObjects.Models.gen_unitEntity
@inject CLL.Localization.LocalizeService SharedLocalizer

@using Microsoft.Extensions.Options
@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("DELETE_GEN_UNIT");
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-footer">
                <h5 class="card-title">@SharedLocalizer.GetLocalizedHtmlString("DELETE_GEN_UNIT")</h5>
            </div>
            <form method="POST" id="frmDeleteGen_Unit" class="my-login-validation" novalidate="" autocomplete="off">
                <div class="card-body">
                    <div class="row">
                        <input asp-for="unitid" type="hidden" />
                    </div>
                    <div class="row ">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="labelNormal required " asp-for="unit"></label>
                                <input asp-for="unit" class="form-control" autocomplete="off" required readonly />
                                <span asp-validation-for="unit" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="labelNormal required " asp-for="unitcode"></label>
                                <input asp-for="unitcode" class="form-control" required readonly/>
                                <span asp-validation-for="unitcode" class="unitcodeerror text-danger" id="unitcodeerror"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:1%;">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(Model.ex_nvarchar1))
                            {
                                <img id="imgLogo" src="@Model.ex_nvarchar1" alt="Unit Logo" style="border: 1px dotted green;" width="200" height="200" />
                            }
                            else
                            {
                                <p>No image found!</p>
                            }
                        </div>
                    </div>
                    
                     <div class="row btn-toolbar">
                        <div class="col-md-6 ">
                            <div class="form-group">
                                <button type="submit" id="btnDeleteGen_Unit" data="@Url.Action("LandingGEN_UNIT", "GEN_UNIT")" class="btn btn-danger btn-md btnAddUnit"><i class="fa fa-trash-alt"></i> @SharedLocalizer.GetLocalizedHtmlString("DELETE_REQUEST")</button>
                                <button id="btnGoBackGen_Unit" data="@Url.Action("LandingGEN_UNIT", "GEN_UNIT")" class="btn btn-secondary btn-md "><i class="fas fa-arrow-circle-left"></i> @SharedLocalizer.GetLocalizedHtmlString("GO_BACK")</button>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </form>
            <!-- ./card-body -->
            <div class="card-footer">
                <div class="row">
                    <div class="col-md-12">

                        <!-- /.description-block -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section Scripts {
    <script src="~/lib/customjs/Gen_Unit/Gen_Unit.js"></script>
}





