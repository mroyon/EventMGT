@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery antiforgery
<!DOCTYPE html>
@{

}

<html lang="en" dir="@(System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"] - Sahel Admin Login</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">
    @{
        if (System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft)
        {
            <environment include="Development">
                <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/lib/bootstrap-sweetalert/sweetalert.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/css/my-login.css" asp-append-version="true" />
            </environment>

            <environment exclude="Development">
                <link rel="stylesheet" href="~/dist/css/vendor.login.rtl.min.css" asp-append-version="true" />
            </environment>
        }
        else
        {
            <environment include="Development">
                <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/lib/bootstrap-sweetalert/sweetalert.css" asp-append-version="true" />
                <link rel="stylesheet" href="~/css/my-login.css" asp-append-version="true" />
            </environment>

            <environment exclude="Development">
                <link rel="stylesheet" href="~/dist/css/vendor.login.min.css" asp-append-version="true" />
            </environment>
        }
    }
    @RenderSection("styles", required: false)
</head>


<body class="img js-fullheight" style="background-image: url(/img/bg.jpg);">
    @{
        var tokenSet = antiforgery.GetAndStoreTokens(Context);
    }
    <input hidden id="@tokenSet.HeaderName" value="@tokenSet.RequestToken" />
    @RenderBody()



